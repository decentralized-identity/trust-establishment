{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Trust Establishment - Topic Oriented",
  "type": "object",
  "properties": {
    "id": {
      "type": "string"
    },
    "author": {
      "type": "string"
    },
    "created": {
      "type": "string",
      "format": "date-time"
    },
    "version": {
      "type": "integer"
    },
    "entity": {
      "type": "string"
    },
    "topics": {
      "type": "object",
      "patternProperties": {
        "\\w+:(\/?\/?)[^\\s]+": {
          "type": "object"
        }
      },
      "additionalProperties": false
    }
  },
  "required": [
    "id",
    "author",
    "created",
    "version",
    "entity",
    "topics"
  ],
  "additionalProperties": false
}